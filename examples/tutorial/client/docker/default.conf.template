server {
    listen ${PORT};
    server_name _;

    location / {
        index index.html;
        root /usr/share/nginx/html;
        try_files $uri $uri$args $uri$args/ /index.html;
    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }
}
